<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/every_bg"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:layout_weight="1">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_tv_position_every"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A4A4A4"
            tools:text="1"
            android:textSize="@dimen/font_16"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_icon_every"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_marginStart="@dimen/size_10"
            android:src="@mipmap/icon_lockin_amount"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/name_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12"
            android:layout_marginStart="4dp"
            android:textColor="@color/deep_gray_2"/>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_tv_value_every"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="56dp"
        android:gravity="center"
        android:textSize="@dimen/font_16"
        android:textColor="@color/sj_theme_color"
        tools:text="12345"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingStart="@dimen/size_20"
        android:paddingEnd="@dimen/size_20">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_tv_change_every"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"
            tools:text="+0.00%"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/shape_increase"/>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>