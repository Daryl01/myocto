<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_pay"
    android:layout_width="@dimen/size_320"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_10"
    android:paddingBottom="@dimen/size_30">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_charge_close"
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_marginStart="@dimen/size_20"
            android:src="@mipmap/icon_close_64"
            app:layout_constraintBottom_toBottomOf="@+id/tv_charge_type"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_charge_type" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_charge_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:text="@string/charge_type"
            android:textSize="@dimen/font_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_divider_charge"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/size_10"
            android:background="#f5f5f5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_charge_type" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_charge_ZFB"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_50"
            android:layout_marginEnd="@dimen/size_44"
            android:layout_marginStart="@dimen/size_44"
            android:layout_marginTop="@dimen/size_20"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_pay_zfb"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_divider_charge" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_charge_WX"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_50"
            android:layout_marginEnd="@dimen/size_44"
            android:layout_marginStart="@dimen/size_44"
            android:layout_marginTop="@dimen/size_20"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_pay_wx"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_charge_ZFB" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_charge_ApplePay"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_50"
            android:layout_marginEnd="@dimen/size_44"
            android:layout_marginStart="@dimen/size_44"
            android:layout_marginTop="@dimen/size_20"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_pay_apple"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_charge_WX" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_charge_WX"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/size_20">
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cb_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意章鱼娱乐用户服务协议" />
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.LinearLayoutCompat>