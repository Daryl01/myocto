<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc001542">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_head"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_120"
        android:src="@mipmap/gifts_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_20"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_gifts_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginTop="@dimen/size_10"
        android:src="@mipmap/gifts_content"
        android:scaleType="fitXY"
        android:paddingStart="@dimen/size_30"
        android:paddingEnd="@dimen/size_30"
        app:layout_constraintBottom_toTopOf="@+id/btn_get_gift"
        app:layout_constraintLeft_toLeftOf="@id/img_head"
        app:layout_constraintRight_toRightOf="@id/img_head"
        app:layout_constraintTop_toBottomOf="@id/img_head"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_get_gift"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_44"
        android:layout_marginEnd="@dimen/size_14"
        android:layout_marginStart="@dimen/size_14"
        android:background="@drawable/bg_get_gift"
        android:gravity="center"
        android:text="@string/get_gift"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toTopOf="@+id/img_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_gifts_content" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/gift_paid"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_44"
        android:layout_marginEnd="@dimen/size_14"
        android:layout_marginStart="@dimen/size_14"
        android:gravity="center"
        android:text="@string/gift_paid"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toTopOf="@+id/img_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_gifts_content" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/size_74"
        android:layout_height="@dimen/size_34"
        android:paddingEnd="@dimen/size_20"
        android:paddingStart="@dimen/size_20"
        android:src="@mipmap/icon_close"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_get_gift"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_10"/>


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_warning"
        android:layout_width="@dimen/size_14"
        android:layout_height="@dimen/size_14"
        android:layout_marginBottom="@dimen/size_50"
        android:layout_marginStart="@dimen/size_14"
        android:src="@mipmap/icon_warning_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv"
        app:layout_constraintTop_toBottomOf="@id/img_close" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_14"
        android:layout_marginStart="@dimen/size_14"
        android:text="@string/zy_promise"
        android:textColor="#F5F6F7"
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toRightOf="@+id/icon_warning"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon_warning" />


</android.support.constraint.ConstraintLayout>