<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".home.MoneyDetailActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constrain_money"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_300"
        android:background="@mipmap/purse_detail_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title_money_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_32"
            android:text="@string/wallet"
            android:textColor="#fff"
            android:textSize="@dimen/font_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_record"
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_10"
            android:src="@mipmap/icon_record"
            app:layout_constraintBottom_toBottomOf="@id/tv_title_money_detail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title_money_detail" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_icon_money_detail"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_marginTop="@dimen/size_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_money_detail"
            tools:src="@mipmap/icon_currency_bch" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_back_money_detail"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/size_10"
            android:src="@mipmap/icon_back_48"
            android:paddingEnd="@dimen/size_20"
            app:layout_constraintBottom_toTopOf="@id/img_icon_money_detail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_money_detail" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_name_money_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:textColor="#fff"
            android:textSize="@dimen/font_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_icon_money_detail"
            android:text="BTC" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_amount_hint_money_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_amount"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/font_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_money_detail" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_amount_money_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/font_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_amount_hint_money_detail"
            tools:text="280,000" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_amount_ZYW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_6"
            android:text="/"
            android:textColor="#f5f5f5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_amount_money_detail" />

        <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:id="@+id/tv_money"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginEnd="@dimen/size_14"-->
            <!--android:layout_marginStart="@dimen/size_14"-->
            <!--android:gravity="right"-->
            <!--android:textColor="#f5f5f5"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--app:layout_constraintRight_toLeftOf="@id/tv_divider"-->
            <!--app:layout_constraintTop_toTopOf="@id/tv_divider"-->
            <!--android:text="250000BTC" />-->

        <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginEnd="@dimen/size_14"-->
            <!--android:layout_marginStart="@dimen/size_14"-->
            <!--android:textColor="#F5F5F5"-->
            <!--app:layout_constraintLeft_toRightOf="@id/tv_divider"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="@id/tv_divider"-->
            <!--android:text="2500000 CNY" />-->
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="@dimen/size_162"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_white_10"
        app:layout_constraintTop_toTopOf="@id/constrain_money"
        android:layout_marginTop="@dimen/size_256"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:orientation="vertical">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/size_20"
            android:paddingEnd="@dimen/size_20"
            android:layout_weight="2"
            android:gravity="bottom"
            android:paddingBottom="@dimen/size_14">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@mipmap/icon_freeze_amount"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/freeze_amount"
                android:textSize="@dimen/font_14"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginEnd="@dimen/size_20"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_amount_freeze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14"
                android:textColor="#282828"
                tools:text="32,000,000"/>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bdbdbd"/>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/size_20"
            android:paddingEnd="@dimen/size_20"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@mipmap/icon_lockin_amount"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/lock_amount"
                android:textSize="@dimen/font_14"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginEnd="@dimen/size_20"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_amount_locked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14"
                android:textColor="#282828"
                tools:text="32,000,000"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_usable_money_detail"
        tools:text="可用余额:320000"
        android:textSize="@dimen/font_12"
        android:textColor="#fff"
        android:paddingStart="@dimen/size_14"
        android:paddingEnd="@dimen/size_14"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_orange_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/constrain_money"
        android:layout_marginBottom="4dp"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/size_50">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_trans_in"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/font_14"
            tools:text="@string/trans_out"
            android:background="#fff"
            android:textColor="#FF6F3A"
            android:layout_weight="1"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_trans_out"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="@string/exchange"
            android:textColor="#fff"
            android:textSize="@dimen/font_14"
            android:background="#FF6F3A"
            android:layout_weight="1"/>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>