<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_80">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:src="@mipmap/icon_avatar"
        android:layout_marginStart="@dimen/size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_14"
        android:textSize="@dimen/font_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_register_time"
        tools:text="手机号码:15757129464" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_register_time"
        android:layout_width="wrap_content"
        android:textSize="@dimen/font_12"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/tv_phone"
        app:layout_constraintTop_toBottomOf="@id/tv_phone"
        app:layout_constraintBottom_toTopOf="@+id/tv_level"
        tools:text="注册时间:2018-08-19" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_level"
        android:layout_width="@dimen/size_80"
        tools:text="章鱼宝宝"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/shape_no_level"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/tv_register_time"
        app:layout_constraintTop_toBottomOf="@id/tv_register_time" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/deep_gray_2"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_avatar"
        app:layout_constraintRight_toLeftOf="@id/tv_phone"
        android:layout_marginEnd="@dimen/size_6"
        android:layout_marginStart="@dimen/size_6"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColorHighlight="@color/deep_gray_2"
        tools:text="哈哈哈哈"/>
</android.support.constraint.ConstraintLayout>