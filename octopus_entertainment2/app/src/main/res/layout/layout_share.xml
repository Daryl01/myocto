<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_400"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingStart="@dimen/size_30"
    android:background="@color/white"
    android:paddingEnd="@dimen/size_30">
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_friend"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_100"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:scaleType="fitXY"
            android:src="@mipmap/share_session"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sj_theme_color"
            android:textSize="@dimen/font_16"
            android:text="微信好友"
            android:layout_marginTop="@dimen/size_6"/>
    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_circle"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_100"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:scaleType="fitXY"
            android:src="@mipmap/share_circle"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sj_theme_color"
            android:textSize="@dimen/font_16"
            android:text="朋友圈"
            android:layout_marginTop="@dimen/size_6"/>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>