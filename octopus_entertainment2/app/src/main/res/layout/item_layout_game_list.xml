<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_item_game_list"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_80"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/size_10"
        tools:src="@mipmap/icon_game_placeholder"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_get_item_game_list"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_30"
        android:background="@drawable/shape_blue_corner_20"
        android:text="@string/down_load"
        android:textColor="#fff"
        android:textSize="@dimen/font_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/size_10"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name_item_game_list"
        android:textSize="@dimen/font_14"
        android:textColor="#000"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/size_10"
        android:layout_marginStart="@dimen/size_10"
        android:layout_height="wrap_content"
        tools:text="绝地求生-刺激战场"
        android:layout_marginTop="@dimen/size_6"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/icon_item_game_list"
        app:layout_constraintRight_toLeftOf="@id/btn_get_item_game_list"
        app:layout_constraintTop_toTopOf="@id/icon_item_game_list"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_description_item_game_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_12"
        android:textColor="#585858"
        tools:text="这个是文字"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_item_game_list"
        app:layout_constraintRight_toRightOf="@id/tv_name_item_game_list"
        app:layout_constraintBottom_toBottomOf="@id/icon_item_game_list"
        android:layout_marginBottom="@dimen/size_6"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_playerNum_item_game_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#F09D48"
        tools:text="97万人  在玩"
        android:textSize="@dimen/font_12"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_name_item_game_list"
        app:layout_constraintBottom_toTopOf="@id/tv_description_item_game_list"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_item_game_list"
        app:layout_constraintRight_toLeftOf="@+id/size_item_game_list"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/size_item_game_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_12"
        android:textColor="#97D329"
        tools:text="30MB"
        app:layout_constraintTop_toBottomOf="@id/tv_name_item_game_list"
        app:layout_constraintBottom_toTopOf="@id/tv_description_item_game_list"
        app:layout_constraintLeft_toRightOf="@id/tv_playerNum_item_game_list"
        app:layout_constraintRight_toLeftOf="@id/btn_get_item_game_list"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ECECEC"/>
</android.support.constraint.ConstraintLayout>