<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_height="@dimen/size_50">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_time_item_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/size_14"
        tools:text="2018-08-19 17:50"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_record_item_record"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_time_item_record"
        android:textSize="@dimen/font_14"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/size_10"
        android:layout_marginStart="@dimen/size_14"
        android:maxLines="1"
        android:ellipsize="end"/>

</android.support.constraint.ConstraintLayout>